<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    tools:context=".AvailableGaushalaActivity"
    android:backgroundTint="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvGaushalaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaushala Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1e88e5"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvGaushalaLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: [City, State]"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="4dp"/>

        <!-- New TextView for Fresh Dung Availability and Price -->
        <TextView
            android:id="@+id/tvFreshDungAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fresh Dung: [Amount] at [Price] per kg"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="4dp"/>

        <!-- New TextView for Dry Dung Availability and Price -->
        <TextView
            android:id="@+id/tvDryDungAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dry Dung: [Amount] at [Price] per kg"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp"/>

        <Button
            android:id="@+id/btnBuyDung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Dung"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1e88e5"
            android:padding="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

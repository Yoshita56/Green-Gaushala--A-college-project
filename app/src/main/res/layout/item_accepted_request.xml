<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvBioplantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bioplant Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/tvDungAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested Amount: 500 kg"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDungType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dung Type: Fresh"
        android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvRequestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Date: 01/11/2024"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as Complete"
            android:backgroundTint="#4CAF50"
             android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
